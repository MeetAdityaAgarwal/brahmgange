---
import dotenv from 'dotenv';
dotenv.config(); // Load environment variables from .env file
export const prerender = false
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm';
---

<Layout title="Contact Us">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl text-gray-700 font-light text-center mb-12">Contact Us</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <div>
        <h2 class="text-2xl font-light mb-6">Get in Touch</h2>
        <p class="mb-8">Interested in becoming a distributor? Fill out the form below and our team will get back to you within 24 hours.</p>
        
        <ContactForm client:load />
      </div>

      <div>
        <h2 class="text-2xl font-light mb-6">Contact Information</h2>
        <div class="space-y-6">
          <div>
            <h3 class="font-bold mb-2">Head Office</h3>
            <p>Address : Khasra no 269 JA Kuanwala,</p>
            <p>Dehradun, Uttarakhand 248008</p>
          </div>

          <div>
            <h3 class="font-bold mb-2">Phone</h3>
              <a href="tel:+917900989663" class="text-blue-500 hover:underline">+91 7900989663</a>
          </div>

          <div>
            <h3 class="font-bold mb-2">Email</h3>
            <p>support@brahmgange.com</p>
          </div>

          <div>
            <h3 class="font-bold mb-2">Business Hours</h3>
            <p>Monday - Friday: 9:00 AM - 6:00 PM</p>
            <p>Saturday: 9:00 AM - 1:00 PM</p>
            <p>Sunday: Closed</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
