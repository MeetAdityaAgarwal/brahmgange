---
import { urlFor } from '../lib/sanity';

interface Props {
  title: string;
  excerpt: string;
  mainImage: any;
  publishedAt: string;
  slug: { current: string };
}

const { title, excerpt, mainImage, publishedAt, slug } = Astro.props;
const formattedDate = new Date(publishedAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="bg-white rounded-lg shadow-lg overflow-hidden">
  <img 
    src={urlFor(mainImage).width(800).height(400).url()} 
    alt={`Cover image for ${title}`}
    class="w-full h-48 object-cover"
  >
  <div class="p-6">
    <div class="text-gray-500 text-sm mb-2">{formattedDate}</div>
    <h2 class="text-xl font-bold mb-3">{title}</h2>
    <p class="text-gray-600 mb-4">{excerpt}</p>
    <a 
      href={`/blogs/${slug.current}`} 
      class="text-blue-500 font-semibold hover:text-blue-600"
    >
      Read More â†’
    </a>
  </div>
</article>
