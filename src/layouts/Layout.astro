---
interface Props {
  title: string;
}

const { title } = Astro.props;
import WhatsAppButton from '../components/WhatsAppButton.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Premium packaged drinking water for distributors" />
    <meta name="viewport" content="width=device-width" />
<!-- Standard Favicon -->
    <link rel="icon" href="/favicon.ico" sizes="any">
    
    <!-- PNG Favicons -->
    <link rel="icon" href="/favicon-16x16.png" sizes="16x16" type="image/png">
    <link rel="icon" href="/favicon-32x32.png" sizes="32x32" type="image/png">
    <link rel="icon" href="/favicon-48x48.png" sizes="48x48" type="image/png">

    <!-- Apple Touch Icons -->
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180">

    <!-- Other sizes for specific devices -->
    <link rel="icon" href="/android-chrome-192x192.png" sizes="192x192" type="image/png">
    <link rel="icon" href="/android-chrome-512x512.png" sizes="512x512" type="image/png">
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Brahmgange Beverages</title>
    <meta property="og:title" content="{title} | Brahmgange Beverages" />
    <meta property="og:description" content="Premium packaged drinking water for distributors." />
    <meta property="og:image" content="/logo_init_nobg.png" /> 
    <meta property="og:url" content="{window.location.href}" /> 
    <meta property="og:type" content="website" />
  </head>
  <body>
  <header class="bg-blue-500 bg-gradient-to-b from-sky-700 via-blue-800 via-blue-800 to-sky-700 text-white">
    <nav class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center">
    <a href="/" class="flex items-center space-x-3">
      <img 
              src="/logo_init_nobg.png" 
        alt="Brahmgange Logo" 
        class="h-24 md:h-32 w-auto"
      >
      <span class="text-2xl font-semibold md:text-4xl font-bold">Brahmgange Beverages</span>
    </a>
    
    <!-- Mobile Hamburger Menu Button -->
    <button 
      class="md:hidden text-white text-3xl focus:outline-none"
      id="hamburger-button"
    >
      â˜°
    </button>

    <!-- Navbar Links -->
    <ul 
      class="hidden md:flex space-x-6" 
      id="nav-links"
    >
      <li><a href="/" class="hover:text-blue-200">Home</a></li>
      <li><a href="/about" class="hover:text-blue-200">About</a></li>
      <li><a href="/products" class="hover:text-blue-200">Products</a></li>
      <li><a href="/blogs" class="hover:text-blue-200">Blog</a></li>
      <li><a href="/contact" class="hover:text-blue-200">Contact</a></li>
    </ul>
    
    <!-- Mobile Menu (Initially Hidden) -->
    <ul 
      class="md:hidden z-10 absolute top-36 left-0 w-full bg-blue-500 text-white text-2xl rounded-b-3xl text-center space-y-4 py-4 bg-opacity-90"
      id="mobile-nav"
      style="display: none;"
    >
      <li><a href="/" class="hover:text-blue-200">Home</a></li>
      <li><a href="/about" class="hover:text-blue-200">About</a></li>
      <li><a href="/products" class="hover:text-blue-200">Products</a></li>
      <li><a href="/blogs" class="hover:text-blue-200">Blog</a></li>
      <li><a href="/contact" class="hover:text-blue-200">Contact</a></li>
    </ul>
  </div>
</nav>  </header>

  <main>
    <slot />
  </main>

  <footer class="bg-gray-800 text-white py-8 mt-12">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Footer Section 1 -->
        <div>
          <h3 class="text-xl font-bold mb-4"> Brahmgange Beverages Private Limited</h3>
          <p>Providing premium quality packaged drinking water to distributors nationwide.</p>
        </div>
        <!-- Footer Section 2 -->
        <div>
          <h3 class="text-xl font-bold mb-4">Quick Links</h3>
          <ul class="space-y-2">
            <li><a href="/about" class="hover:text-blue-300">About Us</a></li>
            <li><a href="/products" class="hover:text-blue-300">Our Products</a></li>
            <li><a href="/contact" class="hover:text-blue-300">Become a Distributor</a></li>
          </ul>
        </div>
        <!-- Footer Section 3 -->
        <div>
          <h3 class="text-xl font-bold mb-4">Contact</h3>
          <ul class="space-y-2">
            <li>Phone: <a href="tel:+917900989663" class="hover:underline">+91 7900989663, </a><a href="tel:+918279466881" class="hover:underline">+91 8279466881</a> </li>
            <li>Email: support@brahmgange.com</li>
            <li>Address: Khasra no 269 JA Kuanwala, Dehradun, Uttarakhand 248008</li>
          </ul>
        </div>
      </div>

      <!-- Google Maps Embed -->
      <div class="mt-8">
        <h3 class="text-xl font-bold mb-4">Find Us</h3>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3446.7963037622644!2d78.09961247629806!3d30.242884774824276!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39092f852ec2bca1%3A0xd6c6e8583701f947!2sBrahmgange%20Beverages%20Pvt%20Ltd!5e0!3m2!1sen!2sin!4v1735381546160!5m2!1sen!2sin" width="450" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" title="Brahmgange Beverages Location on Google Maps"></iframe>
      </div>

      <div class="text-center mt-8 pt-8 border-t border-gray-700">
        <p>&copy; <script>document.write(new Date().getFullYear())</script> Brahmgange Beverages Private Limited. All rights reserved.</p>
      </div>
      <!-- <a class="text-gray-600" href="https://www.vecteezy.com/free-png/water-bottle-icon">Water Bottle Icon PNGs by Vecteezy</a> -->
    </div>
  </footer>

  <WhatsAppButton phoneNumber="7900989663" />
    <script>
      const hamburgerButton = document.getElementById('hamburger-button');
      const mobileNav = document.getElementById('mobile-nav');

      hamburgerButton.addEventListener('click', () => {
        // Toggle display of mobile navigation
        if (mobileNav.style.display === 'none' || mobileNav.style.display === '') {
          mobileNav.style.display = 'block';
        } else {
          mobileNav.style.display = 'none';
        }
      });
    </script>
</body>

</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #fff;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
